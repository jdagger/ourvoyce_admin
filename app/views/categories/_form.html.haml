- form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"

      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :shortcut, 'Url Shortcut'
      %td= f.text_field :shortcut
    %tr
      %td= f.label :logo
      %td= f.text_field :logo
    %tr
      %td= f.label :priority, 'Priority (integer representing ordering, sorted asc by default)'
      %td= f.text_field :priority
    %tr
      %td= f.label :display_myvoyce, 'Display Myvoyce (1 to show on myvoyce page, 0 to hide)'
      %td= f.text_field :display_myvoyce
  .actions
    = f.submit
